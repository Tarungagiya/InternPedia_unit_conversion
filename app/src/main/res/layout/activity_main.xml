<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textViewLengthInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Length:"
        android:layout_marginTop="24dp"
        android:layout_marginStart="16dp"/>

    <EditText
        android:id="@+id/editTextLengthInput"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewLengthInput"
        android:layout_marginStart="16dp"
        android:inputType="numberDecimal"/>

    <Spinner
        android:id="@+id/spinnerLength"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextLengthInput"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"/>

    <TextView
        android:id="@+id/textViewLengthResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Converted Length:"
        android:layout_below="@id/spinnerLength"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"/>

    <TextView
        android:id="@+id/textViewLengthResultValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_below="@id/textViewLengthResult"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"/>

    <TextView
        android:id="@+id/textViewWeightInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Weight:"
        android:layout_below="@id/textViewLengthResultValue"
        android:layout_marginTop="24dp"
        android:layout_marginStart="16dp"/>

    <EditText
        android:id="@+id/editTextWeightInput"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewWeightInput"
        android:layout_marginStart="16dp"
        android:inputType="numberDecimal"/>

    <Spinner
        android:id="@+id/spinnerWeight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextWeightInput"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"/>

    <TextView
        android:id="@+id/textViewWeightResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Converted Weight:"
        android:layout_below="@id/spinnerWeight"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"/>

    <TextView
        android:id="@+id/textViewWeightResultValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_below="@id/textViewWeightResult"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"/>

    <Button
        android:id="@+id/buttonConvert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Convert"
        android:layout_below="@id/spinnerWeight"
        android:layout_toEndOf="@id/editTextWeightInput"
        android:layout_marginStart="16dp"
        android:onClick="convertUnits"/>

</RelativeLayout>
